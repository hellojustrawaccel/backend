generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  email         String   @unique
  image         String?
  emailVerified Boolean  @default(false) @map("email_verified")
  active        Boolean  @default(false)
  isAdmin       Boolean  @default(false) @map("is_admin")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  loginCodes    LoginCode[]
  oauthAccounts OAuthAccount[]

  @@index([email])
  @@index([username])
  @@map("users")
}

model OAuthAccount {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  provider   String // 'google' | 'github' | 'discord' | 'gitlab'
  providerId String   @map("provider_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
  @@map("oauth_accounts")
}

model LoginCode {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  code      String
  type      String   @default("login") // 'email_verification' | 'login'
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@index([type])
  @@map("login_codes")
}

model Link {
  id          String   @id @default(uuid())
  title       String
  type        String // 'home' | 'more'
  url         String
  description String?
  color       String?
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("links")
}

model Experience {
  id        String    @id @default(uuid())
  company   String
  role      String
  type      String // 'full-time' | 'part-time' | 'contract'
  url       String
  color     String
  startDate DateTime  @map("start_date")
  endDate   DateTime? @map("end_date")
  order     Int       @default(0)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("experiences")
}

model Project {
  id            String   @id @default(uuid())
  name          String
  description   String?
  avatar        String
  provider      String // 'github' | 'gitlab' | 'sourcehut'
  repositoryUrl String   @map("repository_url")
  color         String?
  order         Int      @default(0)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  stats ProjectStats?

  @@map("projects")
}

model ProjectStats {
  id               String    @id @default(uuid())
  projectId        String    @unique @map("project_id")
  commitActivity   Json      @map("commit_activity")
  languages        Json
  wakatime         Json?
  stars            Int       @default(0)
  forks            Int       @default(0)
  openIssues       Int       @default(0) @map("open_issues")
  openPullRequests Int       @default(0) @map("open_pull_requests")
  contributors     Json?
  lastCommitDate   DateTime? @map("last_commit_date")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("project_stats")
}
